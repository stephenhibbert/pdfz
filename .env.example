# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Resend (email)
RESEND_API_KEY=re_...

# Auth — comma-separated list of allowed email addresses
ALLOWED_EMAILS=you@example.com

# Session signing key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me

# Public URL of this deployment (used to build magic-link URLs)
APP_URL=https://your-app.up.railway.app

# From address for magic-link emails (must be a verified Resend sender)
FROM_EMAIL=PDFZ <noreply@yourdomain.com>

# Logfire
LOGFIRE_TOKEN=...

# Set automatically by Railway in prod; set to "production" manually if needed
# RAILWAY_ENVIRONMENT=production
